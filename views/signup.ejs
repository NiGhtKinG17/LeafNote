<%- include('partials/header') %>

<main class="form-signin text-center login">
  <form method="post" action="/signup" >
    <h1 class="display-5 fw-bold leaf">Leaf🍃</h1>
    <h1 class="h3 mb-3 fw-normal">Sign Up</h1>

    <div class="form-floating">
      <input type="email" class="form-control" id="floatingInput" name="username" placeholder="Add email">
      <label for="floatingInput">Email</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" name="password"  placeholder="Password">
      <label for="floatingPassword">Set password</label>
    </div>

    <button class="w-100 btn btn-lg btn-success" type="submit">Sign-up</button>

    <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
        <i class="fab fa-google"></i>
          Sign-up with Google
    </a>

    <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
  </form>
</main>

<%- include('partials/footer') %>
